---
// index.astro
// Home page
import BaseLayout from '../layouts/BaseLayout.astro';
import TerminalText from '../components/TerminalText.astro';
import TypingText from '../components/TypingText.astro';
import ServiceCard from '../components/ServiceCard.astro';
import ProjectCard from '../components/ProjectCard.astro';

const services = [
  {
    title: 'Oracle ERP Cloud',
    description: 'Implementation, integrations, extensions, and reporting for Oracle Cloud ERP and HCM.',
    icon: 'cloud' as const,
    image: '/images/oracle-cloud.png',
  },
  {
    title: 'Oracle APEX & ORDS',
    description: 'Custom application development, REST APIs, and modernization using Oracle\'s low-code platform.',
    icon: 'code' as const,
    image: '/images/apex-rounded-corners.png',
  },
  {
    title: 'E-Business Suite',
    description: 'EBS extensions, integrations, cloud coexistence, and migration planning.',
    icon: 'database' as const,
    image: '/images/oracle-ebs.png',
  },
];

// Latest projects data
const latestProjects = [
  {
    title: 'Enterprise Data Migration Platform',
    summary: 'Delivering a comprehensive Oracle APEX-based data conversion and interface management solution with automated validation and real-time progress tracking.',
    status: 'Active' as const,
    slug: 'apex-data-migration-platform',
    technologies: ['Oracle APEX', 'PL/SQL', 'Oracle EBS R12.2'],
    industry: 'Manufacturing',
    metrics: [
      'Multiple conversion modules in UAT',
      'Automated validation & error detection',
      'Real-time conversion progress tracking',
    ],
  },
  {
    title: 'JMJ Cloud Website Development',
    summary: 'Building our company website using modern web technologies and AI-assisted development, showcasing technical excellence through performance and security.',
    status: 'Active' as const,
    slug: 'jmj-website-development',
    technologies: ['Astro 5.16.6', 'TypeScript', 'GitHub Pages'],
    industry: 'Professional Services',
    metrics: [
      'Zero-JavaScript by default for fast performance',
      'Full contact form with bot protection',
      '7+ pages with dynamic content',
    ],
  },
  {
    title: 'Fortune 500 ERP Cloud Implementation',
    summary: 'Leading Oracle Fusion Cloud ERP implementation for a global manufacturing client with GL, AP, AR, and PPM modules.',
    status: 'Active' as const,
    slug: 'fortune-500-erp-cloud',
    technologies: ['Oracle Fusion Cloud', 'OTBI', 'REST APIs'],
    industry: 'Manufacturing',
    metrics: [
      '15+ Oracle Cloud modules implemented',
      'Multi-country deployment across 3 continents',
      'Real-time integration with legacy systems',
    ],
  },
];
---

<BaseLayout title="Home" currentPath="/">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content fade-in fade-in-1">
        <TerminalText text="JMJ Cloud" tag="h1" class="hero-title" showCursor={false} />
        <TypingText text="Enterprise Oracle. Modern Speed." tag="p" class="hero-tagline" typingSpeed={80} startDelay={400} />
        <p class="hero-description">
          We transform Oracle ERP Cloud and E-Business Suite into powerful, production-ready systems using APEX, OIC integrations, mobile experiences, and AI automations that are shipped in agile sprints, not years.
        </p>
        <div class="hero-actions">
          <a href="/portfolio" class="btn btn-primary">View Our Work</a>
          <a href="/contact" class="btn btn-secondary">Get in Touch</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services">
    <div class="container">
      <div class="services-header fade-in fade-in-2">
        <h2 class="section-title">What We Do</h2>
        <div class="capabilities-grid">
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Oracle ERP expertise (Cloud + EBS):</strong> implementations, enhancements, upgrades, integrations, and ongoing support</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Build & enhance Oracle solutions:</strong> custom extensions, workflow automation, APEX/ORDS apps, and user-facing tools</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Integrate everything:</strong> OIC, APIs (REST/SOAP), event-driven integrations, and data flows between Oracle and third-party systems</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Enterprise mobile & AI:</strong> secure iOS/cross-platform apps and AI-enabled workflows for productivity</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Modernize & migrate:</strong> cloud adoption, performance tuning, and technical debt reduction</p>
          </div>
          <div class="capability-item">
            <span class="capability-icon">▸</span>
            <p><strong>Reporting, analytics & support:</strong> dashboards, automated extracts, and steady-state support</p>
          </div>
        </div>
      </div>

      <div class="services-grid">
        {services.map((service, index) => (
          <div class={`fade-in fade-in-${index + 3}`}>
            <ServiceCard {...service} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Projects Section -->
  <section class="recent-posts">
    <div class="container">
      <h2 class="section-title">Latest Projects</h2>
      <div class="projects-grid">
        {latestProjects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
      <div class="posts-footer">
        <a href="/portfolio" class="view-all-link">
          View All Projects <span aria-hidden="true">→</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-20) 0 var(--space-16);
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .hero-tagline {
    font-family: var(--font-display);
    margin-bottom: var(--space-6);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    justify-content: center;
    align-items: center;
  }

  /* Services Section */
  .services {
    padding: var(--space-16) 0;
    background-color: var(--bg-secondary);
  }

  .services-header {
    margin-bottom: var(--space-12);
  }

  .section-title {
    text-align: center;
    margin-bottom: var(--space-8);
    font-size: var(--text-3xl);
  }

  .services-grid {
    display: grid;
    gap: var(--space-6);
  }

  .capabilities-grid {
    display: grid;
    gap: var(--space-4);
    max-width: 900px;
    margin: 0 auto;
  }

  .capability-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .capability-icon {
    color: var(--accent-primary);
    font-size: var(--text-lg);
    flex-shrink: 0;
    margin-top: var(--space-1);
  }

  .capability-item p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .capability-item strong {
    color: var(--text-primary);
  }

  /* Recent Projects Section */
  .recent-posts {
    padding: var(--space-16) 0;
  }

  .projects-grid {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .posts-footer {
    text-align: center;
  }

  .view-all-link {
    font-family: var(--font-display);
    font-size: var(--text-base);
    color: var(--accent-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .view-all-link:hover {
    color: var(--accent-secondary);
  }

  /* Responsive */
  @media (min-width: 480px) {
    .hero-actions {
      flex-direction: row;
    }
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--space-24) 0 var(--space-20);
    }

    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<style is:global>
  p.hero-tagline {
    font-size: 2.5rem !important;
    color: var(--accent-primary) !important;
  }

  p.hero-tagline .typing-content,
  p.hero-tagline .typing-cursor {
    color: var(--accent-primary) !important;
  }
</style>
