---
// resume.astro
// Resume page - Company portfolio and expertise
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

// Get all projects and sort by order (lower = more recent/featured)
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => a.data.order - b.data.order);

// Separate active and completed projects
const activeProjects = sortedProjects.filter(p => p.data.status === 'Active');
const completedProjects = sortedProjects.filter(p => p.data.status === 'Completed');
---

<BaseLayout
  title="Resume"
  description="JMJ Cloud team portfolio, recent projects, and technical expertise in Oracle solutions."
  currentPath="/resume"
>
  <section class="resume-listing">
    <div class="container">
      <header class="resume-header">
        <h1 class="resume-title">Company Portfolio</h1>
        <p class="resume-description">
          Oracle expertise delivering enterprise solutions across industries
        </p>
      </header>

      <!-- Current Projects -->
      <div class="section-header">
        <h2 class="section-title">Current Projects</h2>
      </div>

      <div class="projects-grid">
        {activeProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            status={project.data.status}
            year={project.data.year}
            summary={project.data.summary}
            slug={project.slug}
            technologies={project.data.technologies}
            industry={project.data.industry}
            metrics={project.data.metrics}
          />
        ))}
      </div>

      <!-- Recent Projects -->
      <div class="section-header">
        <h2 class="section-title">Recent Projects</h2>
      </div>

      <div class="projects-grid">
        {completedProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            status={project.data.status}
            year={project.data.year}
            summary={project.data.summary}
            slug={project.slug}
            technologies={project.data.technologies}
            industry={project.data.industry}
            metrics={project.data.metrics}
          />
        ))}
      </div>

    </div>
  </section>
</BaseLayout>

<style>
  .resume-listing {
    padding: var(--space-12) 0 var(--space-20);
  }

  .resume-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .resume-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }

  .resume-description {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .section-header {
    margin: var(--space-16) 0 var(--space-8);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    color: var(--text-primary);
  }

  .projects-grid {
    display: grid;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
